/* BBC website CSS file */
*{
    box-sizing: border-box;
}

/* Style the header */
header {
    background-color: #000; /* Set the background color to black */
    color: #fff; /* Set the text color to white */
    padding: 15px; /* Add padding to the header */
}

/* nav bar style */
nav{ 
overflow: clear; /* Clear any floats inside the navbar */
width: 20%; /* width of the nav bar */
display: inline-block; /* Display items inline */
display: inline;
}

/* Style for the logo image */
nav img {
    height: 25px; /* Set the height of the logo */
    width: 25px;
    margin-right: 70px; /* Add spacing between the logo and navbar items */
}

/* Style for BBC logo image */
.BBC-logo {
    width: 200px; /* Set the desired width */
    height: auto; /* Maintain the aspect ratio */
}

/* Style for the navbar items */
nav ul{
    color: white; /* Text color of the navbar items */
    padding: 2px 2px; /* Padding around the navbar items */
    text-decoration: none; /* Remove underline from links */
    display: inline; /* Display items inline */
}

/* Ul style */
nav li{
    list-style: none; /* Remove defult list style */ 
    padding: 0%; /* Remove defult padding style */ 
    margin: 0%; /* Remove defult margin style */
    display: inline; /* display items inline */
    font-size: 12px;
    color: white;
    border-left: 2px white;
    border-right: 2px white;
}

/* Style for the navbar links */
nav a{
color: white; /* Text color of the navbar items */
    text-decoration: none; /* Remove underline from links */
    padding: 14px 16px; /* Padding around the navbar items */
}

/* "Welcome to BBC.com heading" */
.first-heading{
    font-size: 24px;
}

/* Style for the "Search" item */
.search-item {
    text-decoration: #000; /* Font color */
    background-color: white; /* Set the background color you want */
  }

  /* Floating "Welcome to BBC.com" to top left corner */
  #first-heading{
    float: left;
  }

  /* Floating "Thursday 13August" to top left corner */
  #first-date{
    float: right;
  }

  .main-image{
    float: left; /* pushes image to the top left */
    width: 300px; /* width of the image */
    height: auto; /* Maintain the aspect ratio */
  }